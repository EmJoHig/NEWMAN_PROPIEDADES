<!doctype html>
<html lang="es">
<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Newman Group</title>

    <!--====== Favicon Icon ======-->
    <link rel="shortcut icon" href="/images/newman.png" type="image/png">

    <!--====== Bootstrap css ======-->
    <link rel="stylesheet" href="/css/bootstrap.min.css">

    <!--====== Line Icons css ======-->
    <link rel="stylesheet" href="/css/LineIcons.css">
    
    <!--====== GOOGLE Icons css ======-->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

    <!--====== Magnific Popup css ======-->
    <link rel="stylesheet" href="/css/magnific-popup.css">

    <!--====== Default css ======-->
    <link rel="stylesheet" href="/css/detalle/default.css">

    <!--====== Style css ======-->
    <link rel="stylesheet" href="/css/detalle/style.css">

    <link href="https://fonts.googleapis.com/css2?family=Roboto+Condensed&display=swap" rel="stylesheet">

</head>
<body>
    <!--====== PRELOADER PART START ======-->
    <div class="preloader">
        <div class="loader_34">
            <div class="ytp-spinner">
                <div class="ytp-spinner-container">
                    <div class="ytp-spinner-rotator">
                        <div class="ytp-spinner-left">
                            <div class="ytp-spinner-circle"></div>
                        </div>
                        <div class="ytp-spinner-right">
                            <div class="ytp-spinner-circle"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--====== PRELOADER ENDS START ======-->

    <header id="home" class="header-area">
        <div class="navigation fixed-top">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <nav class="navbar navbar-expand-lg">
                            <a class="navbar-brand" href="/">
                                <img src="/images/newman.png" alt="Logo">
                            </a>
                            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                                <span class="toggler-icon"></span>
                                <span class="toggler-icon"></span>
                                <span class="toggler-icon"></span>
                            </button>
                            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                                <ul class="navbar-nav ml-auto">
                                    <li class="nav-item"><a class="page-scroll" href="/">INICIO</a></li>
                                    <li class="nav-item"><a class="page-scroll" href="/alquiler">ALQUILER</a></li>
                                    <li class="nav-item"><a class="page-scroll" href="/compra">COMPRA</a></li>
                                    <li class="nav-item"><a class="page-scroll" href="/compra-campos">CAMPOS</a></li>
                                    <li class="nav-item"><a class="page-scroll" href="/contacto">CONTACTO</a></li>
                                </ul>
                            </div>
                        </nav> 
                    </div>
                </div>
            </div> 
        </div> 
    </header>

    <section class="contact-area pt-200 pb-50 gray-bg">
        <div class="container">
            <div class="row">
                <div class="col-lg-8">
                    <div class="section-title pb-25">
                        <h4 class="title">{{propiedad.nombre}}</h4>
                        <p>{{propiedad.direccion}}</p>
                    </div> 
                </div>
                <div class="col-lg-4">
                    <div class="section-title">
                        <h4 class="title">Precio: ${{propiedad.precio}}
                            <span style="font-size: 80%; color:#838181">
                                {{#if (eq propiedad.moneda 'P')}}
                                    ARS 
                                {{else}}
                                    USD 
                                {{/if}}
                            </span>
                        </h4>
                    </div> 
                </div>
            </div> 
        </div>
        
    
    {{!-- IMAGENES - VIDEO --}}

    {{#if propiedad.video}}
    
        <div class="class-video">
            <p style="text-align: center">
                <video class="group-video" src="data:video/mp4;base64,{{propiedad.video}}" controls width="35%" allow="autoplay"></video>
            </p>
        </div>
            
        {{else}}

        <div class="container">
            <div class="slider-responsive">
                <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                    <div class="carousel-inner">

                        {{#each propiedad.imagenes}}
                            {{#if @first}}
                                <div class="carousel-item active">
                                    <img src="data:image/jpg;base64,{{this}}" class="d-block " alt="" style="width: 100%;">
                                </div>
                            {{/if}}
                        {{/each}}
                        
                        {{#each propiedad.imagenes}}
                            {{#if @first}}
                            {{else}}
                                <div class="carousel-item">
                                    <img src="data:image/jpg;base64,{{this}}" class="d-block" alt="" style="width: 100%;">
                                </div>
                            {{/if}}
                        {{/each}}

                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span> 
                    </a>
                </div>
            </div>
        </div>

    {{/if}}


    </section>


    {{!-- FIN IMAGENES - VIDEO --}}

    <section id="service" class="services-area gray-bg pt-15 pb-30">
        <div class="container">
            <div class="row">
                <div class="col-lg-8">
                    <div class="section-title pb-30">
                        <h2 class="title">Descripción</h2>
                        <p>{{propiedad.descripcion}}</p>
                    </div>
                </div>
            </div> 
        </div>

        <div class="container">
            <div class="row">
                <div class="col-lg-8">
                    <div class="section-title pb-10">
                        <h2 class="title">Detalles</h2>
                    </div>
                </div>
            </div> 
        </div>
        <div class="container">
            <div id="detallesDivId" class="col-lg-8">
                <div class="row col-lg-10" style="border-radius:5px">
                    <div class="col-lg-6 col-md-6 col-sm-8">
                        <div class="single-service mt-30 mb-10">
                            <div class="service-icon">
                                <i><span class="material-icons">shower</span></i>                                
                            </div>
                            <div class="service-content">
                                <h4 class="title">Baños <span style="font-size: 30px; color:#838181"> {{#if propiedad.banos}} {{propiedad.banos}} {{else}} 0 {{/if}} </span></h4>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-6 col-md-6 col-sm-8">
                        <div class="single-service mt-30 mb-10">
                            <div class="service-icon">
                                <i><span class="material-icons">king_bed</span></i>   
                            </div>
                            <div class="service-content">
                                <h4 class="title">Dormitorios <span style="font-size: 30px; color:#838181"> {{#if propiedad.dormitorios}} {{propiedad.dormitorios}} {{else}} 0 {{/if}} </span></h4>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-8">
                        <div class="single-service mt-30 mb-30">
                            <div class="service-icon">
                                <i><span class="material-icons">other_houses</span></i>   
                            </div>
                            <div class="service-content">
                                <h4 class="title">Superficie <span style="font-size: 30px; color:#838181"> {{#if propiedad.superficie}} {{propiedad.superficie}}m² {{else}} 0 {{/if}} </span></h4>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-8">
                        <div class="single-service mt-30 mb-30">
                            <div class="service-icon">
                                <i><span class="material-icons">directions_car</span></i>   
                            </div>
                            <div class="service-content">
                                <h4 class="title">Cocheras <span style="font-size: 30px; color:#838181"> {{#if propiedad.cocheras}} {{propiedad.cocheras}} {{else}} 0 {{/if}} </span></h4>
                            </div>
                        </div>
                    </div>

                </div> 
            </div>
        </div>

        <div class="container">
            <div class="row">
                <div class="col-lg-8">
                    <div class="section-title pt-70 pb-30">
                        <h2 class="title">Consultanos por esta propiedad</h2>
                    </div> 
                    <div class="contact-form pt-30">
                        <form id="contact-form-detalle" action="/send-email-propiedad/{{propiedad._id}}" method="POST">
                            <div class="single-form">
                                <input id="valueNombre" type="text" name="name" placeholder="Nombre" value="{{name}}">
                            </div> 
                            <div class="single-form">
                                <input id="valueMail" type="email" name="email" placeholder="Email" value="{{email}}">
                            </div> 
                            <div class="single-form">
                                <textarea id="valueMessage" name="message" placeholder="Mensaje" value="{{message}}"></textarea>
                            </div> 
                            {{!-- ERRORES --}}
                            <br/>
                            {{#each errors}}
                                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                    {{text}}
                                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                            {{/each}}
                            <div class="single-form">
                                <button class="main-btn" type="submit">Enviar Mensaje</button>
                            </div>
                        </form>
                    </div> 
                    <br/>
                    {{> messages}}
                </div>
            </div> 
        </div>
    </section>

    <!--====== FOOTER PART START ======-->
    <footer id="footer" class="footer-area">
        <div class="footer-copyright pb-20">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="copyright-text text-center pt-20">
                            <p>Copyright © 2021. Page Crafted by <a rel="nofollow">Emanuel Higuera</a></p>
                        </div>
                    </div>
                </div>
            </div> 
        </div> 
    </footer>
    <!--====== FOOTER PART ENDS ======-->


    <!--====== jquery js ======-->
    <script src="/js/vendor/modernizr-3.6.0.min.js"></script>
    <script src="/js/vendor/jquery-1.12.4.min.js"></script>

    <!--====== Bootstrap js ======-->
    <script src="/js/bootstrap.min.js"></script>
    <script src="/js/popper.min.js"></script>

    <!--====== Magnific Popup js ======-->
    <script src="/js/jquery.magnific-popup.min.js"></script>

    <!--====== Counter Up js ======-->
    <script src="/js/waypoints.min.js"></script>
    <script src="/js/jquery.counterup.min.js"></script>

    <!--====== Appear js ======-->
    <script src="/js/jquery.appear.min.js"></script>

    <!--====== Scrolling js ======-->
    <script src="/js/scrolling-nav.js"></script>
    <script src="/js/jquery.easing.min.js"></script>

    <!--====== Main js ======-->
    <script src="/js/detalle/main.js"></script>

</body>
</html>
